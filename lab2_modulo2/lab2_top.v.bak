module lab2_top(
    input [17:0] SW,
    output [17:0] LEDR,
    output [8:0] LEDG,
    output [6:0] HEX0, HEX1, HEX2,
    output [6:0] HEX3, HEX4, HEX5
);
    wire [3:0] A = SW[17:14];
    wire [3:0] B = SW[3:0];
    wire K = SW[4];
    wire [3:0] S;
    wire cout;

    assign LEDR[17:14] = A;
    assign LEDR[3:0] = B;
    assign LEDG[3:0] = S;

    adder_subtractor_parametrizable #(4) calc (
        .a(A),
        .b(B),
        .K(K),
        .sum(S),
        .cout(cout)
    );

    display_signed_decimal disp_signed (
        .value(S),
        .HEX0(HEX0),
        .HEX1(HEX1),
        .HEX2(HEX2)
    );

    hex_7seg hex_a (.in(A), .out(HEX5));
    assign HEX4 = 7'b1111111;

    hex_7seg hex_b (.in(B), .out(HEX3));
endmodule