module lab2_adder_subtractor_parametrizable #(parameter WIDTH = 4) (
    input [WIDTH-1:0] a, b,
    input K,
    output [WIDTH-1:0] sum,
    output cout
);
    wire [WIDTH-1:0] b_xor;
    wire [WIDTH:0] carry;

    assign b_xor = b ^ {WIDTH{K}};
    assign carry[0] = K;

    genvar i;
    generate
        for (i = 0; i < WIDTH; i = i + 1) begin : gen_add
            lab2_full_adder FA (
                .a(a[i]),
                .b(b_xor[i]),
                .cin(carry[i]),
                .sum(sum[i]),
                .cout(carry[i+1])
            );
        end
    endgenerate

    assign cout = carry[WIDTH];
endmodule